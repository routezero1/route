- if user_signed_in?
    %p#intro
        =  t('.title_signed_in')
        = current_user.name
        %br/
        %span
            =  t('.welcome')
- else
    %p#intro
        =  t('.title_signed_out')
        %br/
        %span
            =  t('.welcome')

#posts
    - @posts.each do |post|
        .post
            .post_image
                = link_to (image_tag post.image.url(:small)), post
            .post_content
                .title
                    %h2= link_to post.title, post
                .data.clearfix
                    %p.username
                        =  t('.shared')
                        = post.user.name
                    %p.buttons
                        %span
                            %i.fa.fa-comments-o
                            = post.comments.count
                        %span
                            %i.fa.fa-thumbs-o-up
                            = post.get_likes.size
